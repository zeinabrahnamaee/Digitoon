<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/title"
        style="@style/TextStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/padding_8dp"
        android:paddingVertical="@dimen/padding_8dp"
        app:layout_constraintTop_toTopOf="@id/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/logo"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/yearTitle"
        style="@style/TextSubStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/padding_4dp"
        android:text="@string/year"
        android:paddingHorizontal="@dimen/padding_8dp"
        app:layout_constraintBottom_toTopOf="@id/type"
        app:layout_constraintStart_toStartOf="@id/typeTitle"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/year"
        style="@style/grayStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/padding_4dp"
        app:layout_constraintBottom_toTopOf="@id/type"
        app:layout_constraintStart_toEndOf="@id/typeTitle"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/typeTitle"
        style="@style/TextSubStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/padding_8dp"
        android:paddingVertical="@dimen/padding_4dp"
        android:text="@string/type"
        app:layout_constraintBottom_toBottomOf="@id/logo"
        app:layout_constraintStart_toStartOf="@id/title"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/type"
        style="@style/grayStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/padding_4dp"
        app:layout_constraintBottom_toBottomOf="@id/logo"
        app:layout_constraintStart_toEndOf="@id/typeTitle"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:layout_margin="@dimen/margin_16dp"
        android:background="@color/gray"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>